<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<main class="container py-5" style="max-width: 600px;">
  <h2>Novo veículo</h2>

  <% if (error) { %>
    <div class="alert alert-danger mt-3"><%= error %></div>
  <% } %>

  <form method="POST" action="/veiculos" class="mt-3">
    <div class="mb-3">
      <label class="form-label">Marca</label>
      <input type="text" name="marca" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Modelo</label>
      <input type="text" name="modelo" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Placa</label>
      <input type="text" name="placa" maxlength="7" class="form-control" required placeholder="ABC1234">
    </div>

    <div class="mb-3">
      <label class="form-label">Tipo</label>
      <input type="text" name="tipo" class="form-control" placeholder="SUV, Hatch, Sedan...">
    </div>

    <div class="mb-3">
      <label class="form-label">Valor Diária</label>
      <input type="number" step="0.01" name="valor_diaria" class="form-control" required>
    </div>

    <button class="btn btn-success">Salvar</button>
    <a href="/veiculos" class="btn btn-secondary ms-2">Cancelar</a>
  </form>
</main>

<%- include('../../partials/footer') %>